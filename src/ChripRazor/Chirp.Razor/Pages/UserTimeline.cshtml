@page "/{author}"
@model Chirp.Razor.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
    
    int nextPage = Model.currentPage + 1;
    int prevPage = Model.currentPage > 1 ? Model.currentPage - 1 : 1;
}

<div>
    <h2> @routeName's Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @CheepService.UnixTimeStampToDateTimeString(cheep.Timestamp)</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <Button class="btn">
        <a href="routeName?page=@prevPage" class="btn" id="prevBtn" style="color: white;">Previous</a>
    </Button>
    <button class="btn">
        <a href="/@routeName?page=@nextPage" class="btn" id="nextBtn" style="color: white;">Next</a>
    </button>
    
</div>
