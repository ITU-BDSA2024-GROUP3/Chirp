<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>
<body>
<div class=page>
    <h1><img src="/images/icon1.png" alt="Icon1"/>Chirp!</h1>
    
    <div class=navigation>
        @if (User.Identity.IsAuthenticated)
        {
            <div>
                <a href="/@(Model.username)">my timeline</a> |
                <a href="/">public timeline</a> |
                <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/PersonalData" title="Manage">Manage @User.Identity?.Name's account</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout" >logout [@(Model.username)]</a> 
            </div>
        }
        else
        {
            <div>
                <a href="/">public timeline</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> |
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        }
    </div>
    
    <div class=body>
            @RenderBody()
    </div>
    <div class=footer>
        Chirp &mdash; An ASP.NET Application
    </div>
</div>

</body>
@await RenderSectionAsync("Scripts", required: false)
</html>
