<li>
    <p>
        <div>
            <div style="display: flex; align-items: center">
                <strong>
                    <a href="/@ViewData["AuthorName"]?page=1">@ViewData["AuthorName"]</a>
                </strong>
                @{
                    if (User.Identity!.IsAuthenticated && !ViewData["AuthorName"]!.Equals(ViewData["LoggedInUserName"]))
                    {
                        <partial name="_FollowBtn"/>
                    }
                }
            </div>
            @if (ViewData["GifId"] != null)
            {
                string src = $"https://giphy.com/embed/{@ViewData["GifId"]}";
                <br>
                <iframe src="@src" style="pointer-events: none"></iframe>
                <br>
            }
            <br>
            @ViewData["CheepText"]
            <br>
                <p style="display:inline">Likes: @ViewData["Likes"]
                    @{if (User.Identity.IsAuthenticated && !ViewData["AuthorName"].Equals(ViewData["LoggedInUserName"]))
                        {
                            <partial name="_LikeButton"/>
                        }
                    }
                </p>
            <small>@ViewData["Timestamp"]</small>
        </div>
    </p>
</li>