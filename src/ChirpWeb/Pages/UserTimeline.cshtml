@page "/{name}/"
@using ChirpInfrastructure
@using ChirpWeb
@model ChirpWeb.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("name");
    int nextPage = Model.currentPage + 1;
    int prevPage = Model.currentPage > 1 ? Model.currentPage - 1 : 1;
}

<div>
    <h2> @Model.Author.Name's Timeline </h2>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="cheepbox">
            <h3>What's on your mind @(Model.username)?</h3>
            <form method="post">
                <input style="float: left" type="text" asp-for="Text">
                <input type="submit" value="Share">
            </form>
        </div>
    }
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                ViewData["LoggedInUserName"] = Model.author.Name;
                ViewData["AuthorName"] = cheep.AuthorName;
                ViewData["CheepText"] = cheep.Text;
                ViewData["Timestamp"] = CheepService.UnixTimeStampToDateTimeString(cheep.TimeStamp);
                ViewData["Followed"] = true;
                
                <partial name="Shared/_CheepBox"/>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    @if (Model.currentPage > 1){
    <Button class="btn">
        <a href="/@routeName?page=@prevPage" class="btn" id="prevBtn" style="color: white;">Previous (@prevPage)</a>
    </Button>
    }
    <Button class="btn">
        <a href="/@routeName?page=@nextPage" class="btn" id="nextBtn" style="color: white;">Next (@nextPage)</a>
    </Button>

</div>